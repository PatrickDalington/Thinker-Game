<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4E342E" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Wooden frame with gradient -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#8B4513"
                android:endColor="#A0522D"
                android:angle="90" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Inner board shadow to add depth -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#2F4F4F" /> <!-- Darker shade for board shadow -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner chalkboard -->
    <item android:left="14dp" android:right="14dp" android:top="14dp" android:bottom="14dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Classic green chalkboard color -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
