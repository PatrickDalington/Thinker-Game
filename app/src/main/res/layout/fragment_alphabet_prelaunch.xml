<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:background="@color/primary"
    tools:context=".alphabets_game_activity.AlphabetPrelaunchFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alphabet_game"
        android:id="@+id/relative"
        android:src="@drawable/alphabet_game"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The lord"
            android:visibility="visible"
            android:textSize="11sp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_tv_bg"
            android:shadowColor="@android:color/black"
            android:shadowDx="5"
            android:id="@+id/_tv"
            android:shadowDy="5"
            android:shadowRadius="20"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"/>


        <include
            layout="@layout/pre_launch_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/_tv"/>

    </RelativeLayout>

</RelativeLayout>