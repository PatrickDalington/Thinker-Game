<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ww">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/lin"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible"
                android:textSize="11sp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="#EDD3AD"
                android:background="@drawable/text_tv_bg"
                android:shadowColor="@android:color/black"
                android:shadowDx="5"
                android:id="@+id/_tv"
                android:shadowDy="5"
                android:shadowRadius="20"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/start"
                android:textColor="#fff"
                android:background="@drawable/button_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Practice"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/practice"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Mode"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/choose_level"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch AI Play"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/play_ai"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close Game"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/close_game"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg"/>




        </LinearLayout>



</androidx.core.widget.NestedScrollView>