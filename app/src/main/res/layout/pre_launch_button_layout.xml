<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/start"
        android:contentDescription="TODO"
        android:layout_marginBottom="12dp"
        android:id="@+id/start"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/practice"
        android:contentDescription="TODO"
        android:layout_marginBottom="12dp"
        android:id="@+id/practice"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/choose_mode"
        android:contentDescription="TODO"
        android:layout_marginBottom="12dp"
        android:id="@+id/choose_mode"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/watch_ai_play"
        android:contentDescription="TODO"
        android:layout_marginBottom="12dp"
        android:id="@+id/watch_ai_play"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/close_game"
        android:contentDescription="TODO"
        android:layout_marginBottom="15dp"
        android:id="@+id/close_game"/>



    </LinearLayout>


</ScrollView>